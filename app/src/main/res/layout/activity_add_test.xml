<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#29A89C"
    tools:context=".AddTestActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trip Name"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="18dp"
            android:layout_marginTop="60dp"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/add_et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="18dp"
            android:hint="Trip Name"
            android:textColor="#FFFFFF"
            android:textColorHint="#D8C9C9"
            android:maxLines="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Point"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="18dp"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/add_et_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="18dp"
            android:hint="Start Point"
            android:textColor="#FFFFFF"
            android:textColorHint="#D8C9C9"
            android:maxLines="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="End Point"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="18dp"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/add_et_end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="18dp"
            android:hint="End Point"
            android:textColor="#FFFFFF"
            android:textColorHint="#D8C9C9"
            android:maxLines="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="18dp"
            android:weightSum="2">

            <TextView
                android:id="@+id/add_tv_go_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                android:hint="Set Go Date"
                android:textColorHint="@color/red"
                android:textColor="@color/blue"
                android:layout_weight="1"
                android:gravity="end"/>

            <TextView
                android:id="@+id/add_tv_go_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                android:hint="Set Go Time"
                android:textColorHint="@color/red"
                android:textColor="@color/blue"
                android:layout_weight="1"
                android:gravity="start"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/add_return_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="18dp"
            android:weightSum="2">

            <TextView
                android:id="@+id/add_tv_return_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                android:hint="Set Return Date"
                android:textColorHint="@color/red"
                android:textColor="@color/blue"
                android:layout_weight="1"
                android:gravity="end"/>

            <TextView
                android:id="@+id/add_tv_return_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                android:hint="Set Return Time"
                android:textColorHint="@color/red"
                android:textColor="@color/blue"
                android:layout_weight="1"
                android:gravity="start"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="18dp">

            <Spinner
                android:id="@+id/add_spinner_repeat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"/>

            <Spinner
                android:id="@+id/add_spinner_way"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"/>
        </LinearLayout>

        <EditText
            android:id="@+id/add_et_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="18dp"
            android:hint="Notes"
            android:textColor="#FFFFFF"
            android:textColorHint="#D8C9C9"/>

        <Button
            android:id="@+id/add_btn_add_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="18dp"
            android:text="Add Notes"
            app:backgroundTint="@color/teal_700" />

        <Button
            android:id="@+id/add_btn_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="18dp"
            android:text="Save"
            app:backgroundTint="@color/teal_700" />
    </LinearLayout>


</ScrollView>